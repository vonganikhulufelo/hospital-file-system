<h1>Receptionists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Title</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Wname</th>
      <th>Role</th>
      <th>Hname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receptionists.each do |receptionist| %>
      <tr>
        <td><%= receptionist.fname %></td>
        <td><%= receptionist.lname %></td>
        <td><%= receptionist.email %></td>
        <td><%= receptionist.title %></td>
        <td><%= receptionist.address %></td>
        <td><%= receptionist.phone %></td>
        <td><%= receptionist.wname %></td>
        <td><%= receptionist.role %></td>
        <td><%= receptionist.hname %></td>
        <td><%= link_to 'Show', [receptionist.hospital, receptionist] %></td>
        <td><%= link_to 'Edit', edit_hospital_receptionist_path(receptionist.hospital, receptionist) %></td>
        <td><%= link_to 'Destroy', hospital_receptionists_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receptionist', new_hospital_receptionist_path %>
