<h1>Doctors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Title</th>
      <th>Wname</th>
      <th>Roomno</th>
      <th>Role</th>
      <th>Specialisation</th>
      <th>Hname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.fname %></td>
        <td><%= doctor.lname %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.title %></td>
        <td><%= doctor.wname %></td>
        <td><%= doctor.roomno %></td>
        <td><%= doctor.role %></td>
        <td><%= doctor.specialisation %></td>
        <td><%= doctor.hname %></td>
        <td><%= link_to 'Show', [doctor.hospital, doctor] %></td>
        <td><%= link_to 'Edit', edit_hospital_doctor_path(doctor.hospital,doctor) %></td>
        <td><%= link_to 'Destroy', hospital_path(current_user.hospital_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_hospital_doctor_path %>
