<h2 class="text-center">Patientrecords</h2>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Age</th>
      <th>Bp</th>
      <th>Heartrate</th>
      <th>Weight</th>
      <th>Illness</th>
      
      <th>Prescription</th>
      <th>Drugcollected</th>
      <th>Next Conslt</th>
      <th colspan="0"></th>
    </tr>
  </thead>

  <tbody>
    <% @patientrecords.each do |patientrecord| %>
      <tr>
        <td><%= patientrecord.created_at.strftime("%B %d, %Y") %></td>
        <td><%= patientrecord.age %></td>
        <td><%= patientrecord.bp %></td>
        <td><%= patientrecord.heartrate %></td>
        <td><%= patientrecord.weight %></td>
        <td><%= patientrecord.illness %></td>
        <td><%= patientrecord.prescription %></td>
        <td><%= patientrecord.drugcollected %></td>
        <td><%= patientrecord.consultation %></td>
        <% if current_user.role == "doctor" && (patientrecord.heartrate == nil || patientrecord.heartrate == "")  %>
        <td><%= link_to 'Capture examination', ([patientrecord.patient, patientrecord]) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "nurse" %>
<%= link_to 'New Patientrecord', new_patient_patientrecord_path %>
<% end %>
