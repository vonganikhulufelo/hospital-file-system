<h1>Hospitals</h1>

<table class="table">
  <thead>
    <tr>
      <th>Hospital name</th>
      <th>Hospital tellphone</th>
      <th>Hospital address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.hname %></td>
        <td><%= hospital.htellphone %></td>
        <td><%= hospital.haddress %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

